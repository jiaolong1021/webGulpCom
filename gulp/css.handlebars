[class*='ico-'] {
	display: inline-block;
	vertical-align: middle;
	background-repeat: no-repeat;
}

{{#sprites}}
{{name}}{
    width: {{px.width}};
    height: {{px.height}};
    background-position: {{px.offset_x}} {{px.offset_y}};
    background-image: url('../images/sprite.png');
    background-size: {{px.total_width}} {{px.total_height}};
}
{{/sprites}}